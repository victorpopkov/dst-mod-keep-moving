root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true

# Lua
[*.lua]
indent_size = 4
max_line_length = 100

# config.ld
[config.ld]
indent_size = 4

# XML
[*.xml]
indent_size = 4

# .luacheckrc
[.luacheckrc]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
